<form action="/users/dashboard/notes/add" method="POST">
    <fieldset>
        <legend>Write note</legend>
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" placeholder="Title" required /><br>
        <label for="category">Category:</label>
        <input type="text" id="category" name="category" placeholder="category" required /><br>
        <label for="content">Content:</label>
        <textarea id="content" name="content" cols="30" rows="10"  required ></textarea><br>
        <input type="submit" value="Submit" />
    </fieldset>
</form>