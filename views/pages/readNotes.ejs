<div class="container">
    <div class="row">
        <% notes.forEach(function(note) { %>
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= note.title %>
                        </h5>
                        <p class="card-text">
                            <%= truncateText(note.content, 50) %>
                        </p>
                        <a href="/notes/edit/<%= note.id %>" class="btn btn-primary">Edit</a>
                        <a href="/notes/delete/<%= note.id %>" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
            <% }); %>
    </div>
</div>