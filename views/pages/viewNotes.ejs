<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>
                <%= note.title %>
            </h1>
            <p>
                <%= note.content %>
            </p>
            <a href="/notes/<%= note.id %>/edit" class="btn btn-secondary">Edit</a>
            <form method="POST" action="/users/dashboard/notes/<%= note.id %>?_method=DELETE">
                <input type="submit" value="delete">
            </form>

        </div>
    </div>
</div>