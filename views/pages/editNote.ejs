<form action="/users/dashboard/notes/<%= note.id %>/edit" method="POST">
    <label for="title">Title:</label>
    <input type="text" name="title" value="<%= note.title %>"><br>

    <label for="category">Category:</label>
    <input type="text" name="category" value="<%= note.category %>"><br>

    <label for="content">Content:</label>
    <textarea name="content"><%= note.content %></textarea><br>

    <input type="submit" value="Save">
</form>