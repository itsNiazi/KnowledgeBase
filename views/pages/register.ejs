<form action="/users/register" method="POST">
    <input type="text" id="username" name="username" placeholder="Username" required>
    <input type="password" id="password" class="space" name="password" placeholder="Password" required>
    <input type="text" id="firstname" class="space" name="firstname" placeholder="Firstname" required>
    <input type="text" id="lastname" class="space" name="lastname" placeholder="Lastname" required>
    <button type="submit">Register</button>
</form>

<a href="login">Already signed up?</a>